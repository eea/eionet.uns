<?xml version='1.0' encoding='utf-8'?>
<Context path="@CONTEXT_PATH@" reloadable="true" docBase="@app.name@.war">
	<Environment name="APPLICATION_HOME" type="java.lang.String" value="@UNS_HOME@"/>
	<Resource name="jdbc/UNS_DS" auth="Container" type="javax.sql.DataSource"
		driverClassName="com.mysql.jdbc.Driver"
		factory="org.apache.tomcat.dbcp.dbcp.BasicDataSourceFactory"
	  	maxIdle="30"
		maxWait="10000"
	  	maxActive="100"
	  	username="@db.user@"
	  	password="@db.password@"
	  	url="@db.url@?useUnicode=true&amp;characterEncoding=UTF-8?useUnicode=true&amp;characterEncoding=UTF-8"
	/>
</Context>


